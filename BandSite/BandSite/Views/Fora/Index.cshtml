@model IEnumerable<BandSite.Models.Forum>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ForumTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ForumMessage)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateCreated)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-controller="ThreadPosts" asp-action="Index" asp-route-id="@item.ForumId">
                @Html.DisplayFor(modelItem => item.ForumTitle)
                    </a>
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ForumId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ForumId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ForumId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
